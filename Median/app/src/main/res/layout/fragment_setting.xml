<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_toolbar_container">
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="#F1F1F1"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textStyle="bold"
        android:textColor="#797979"
        android:text="일반"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/alarm_setting_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:background="#FFFFFF"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="알림 설정"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/arrow_down"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="#C7C7C7"/>

    <LinearLayout
        android:id="@+id/alarm_setting_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:background="#FFFFFF"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="로그아웃"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/arrow_right"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="#F1F1F1"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textStyle="bold"
        android:textColor="#797979"
        android:text="지원"/>

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/version_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:background="#FFFFFF"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="버전 정보"/>

        <TextView
            android:layout_alignBaseline="@id/version_button"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v 1.3.5"
            android:textColor="#9D9D9D"/>

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="#C7C7C7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/help_developer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:background="#FFFFFF"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="개발자에게 도움 요청하기"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/arrow_right"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="#C7C7C7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/developer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:background="#FFFFFF"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="개발자 정보"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/arrow_right"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>