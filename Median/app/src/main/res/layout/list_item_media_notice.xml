<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:layout_marginBottom="1dp"
    android:background="#FBFBFB">

    <LinearLayout
        android:layout_toStartOf="@id/media_notice_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/media_notice_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="This is notice title..." />

        <TextView
            android:id="@+id/media_notice_contents_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="#96989A"
            android:textSize="13sp"
            tools:text="This is notice body..." />

        <TextView
            android:id="@+id/media_notice_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="#96989A"
            android:textSize="10sp"
            tools:text="2017-08-24" />


    </LinearLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/media_notice_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

</RelativeLayout>