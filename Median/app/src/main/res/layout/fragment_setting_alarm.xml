<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/media_notice_switch_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="학과 공지"
        android:textSize="15sp" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/media_notice_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="6dp"
        android:theme="@style/customSwitch"
        android:layout_toEndOf="@+id/media_notice_switch_text_view"/>

    <TextView
        android:id="@+id/student_notice_switch_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학생회 공지"
        android:layout_margin="10dp"
        android:layout_below="@+id/media_notice_switch_text_view"
        android:textSize="15sp" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/student_notice_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="6dp"
        android:theme="@style/customSwitch"
        android:layout_toEndOf="@+id/student_notice_switch_text_view"
        android:layout_below="@+id/media_notice_switch_text_view"/>

</RelativeLayout>