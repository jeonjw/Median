<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:padding="15dp"
        android:background="#D1D1D1"
        android:id="@+id/media_notice_detail_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="This is notice title..." />

    <TextView

        android:id="@+id/media_notice_detail_contents_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="20dp"
        android:paddingEnd="10dp"
        android:autoLink="web"
        android:paddingStart="10dp"
        android:textColor="#717171"
        android:textSize="14sp"
        tools:text="This is notice body..." />

    <ImageView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/media_notice_detail_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>