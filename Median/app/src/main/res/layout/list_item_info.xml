<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
   >

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:src="@drawable/media_logo" />

    <TextView
        android:id="@+id/info_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/info_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_name_text_view"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/info_telnumber_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_location_text_view"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/info_email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_telnumber_text_view"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/profile_image" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone_call"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:id="@+id/info_phone_call_button"
        android:background="@android:color/transparent"/>


</RelativeLayout>