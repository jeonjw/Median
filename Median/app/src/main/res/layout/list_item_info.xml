<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
   >

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@drawable/media_logo" />

    <TextView
        android:id="@+id/info_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:id="@+id/info_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_name_text_view"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:id="@+id/info_telnumber_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_location_text_view"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:id="@+id/info_email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_telnumber_text_view"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/profile_image" />


</RelativeLayout>